                                <i class="material-icons">person</i>
                                <p class="d-lg-none d-md-block">
                                    Account
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('mage_logout') }}">
                                <i class="material-icons">logout</i>
                                <p class="d-lg-none d-md-block">
                                    Logout
                                </p>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <!-- End Navbar -->
        <div class="content">
            <div class="container-fluid">
                {% block pageContent %}{% endblock %}
            </div>
        </div>
        <footer class="footer">
            <div class="container-fluid">
                <nav class="float-left">
                    <ul>
                        <li>
                            <a href="https://www.magephp.com" target="_blank">
                                Magallanes
                            </a>
                        </li>
                        <li>
                            <a href="https://github.com/andres-montanez/Magallanes" target="_blank">
                                GitHub
                            </a>
                        </li>
                    </ul>
                </nav>
                <div class="copyright float-right" id="date">
                    &copy; {{ 'now'|date('Y') }}, made with <i class="material-icons">favorite</i> by
                    <a href="https://www.creative-tim.com" target="_blank">Andrés Montañez</a> for the DevOps on a hurry.
                    <br />
                    HTML by <a href="https://www.creative-tim.com">
                        Creative Tim
