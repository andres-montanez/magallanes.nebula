            <img src="{{ asset('assets/img/logo.png') }}" class="logo-image"/>
            <a href="{{ path('mage_projects') }}" class="simple-text logo-normal">
                Magallanes Nebula
            </a>
        </div>
        <div class="sidebar-wrapper">
            <ul class="nav">
                <li class="nav-item   ">
                    <a class="nav-link" href="{{ path('mage_projects') }}">
                        <i class="material-icons">dashboard</i>
                        <p>Dashboard</p>
                    </a>
                </li>
                <li class="nav-item {{ menu_active(path('mage_projects'), app.request.pathInfo) }}">
