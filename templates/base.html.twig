<script>
{% for message in app.flashes('success') %}
    $.notify({
        icon: 'add_alert',
        message: '{{ message|escape('js') }}'
    }, {
        type: 'success',
        timer: 3000,
        placement: { from: 'top', align: 'right' }
    });
{% endfor %}
</script>
