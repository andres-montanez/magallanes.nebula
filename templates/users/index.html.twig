{% extends 'base.html.twig' %}

{% block pageTitle %}Users &amp; Groups{% endblock %}
{% block pageName %}Users &amp; Groups{% endblock %}

{% block pageContent %}
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header card-header-primary">
                    <span class="float-right">
                        <a class="btn btn-info btn-sm" href="{{ path('mage_user_new') }}">
                            Add user
                        </a>
                    </span>
                    <h4 class="card-title ">Users</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead class=" text-primary">
                                <tr>
                                    <th width="250">Username</th>
                                    <th>Name</th>
                                    <th width="200">Roles</th>
                                    <th width="100"></th>
                                </tr>
                            </thead>

                            <tbody>
                            {% for user in users %}
                                <tr>
                                    <td>{{ user.username }}</td>
                                    <td>{{ user.name }}</td>
                                    <td>{{ user|user_role }}</td>
                                    <td>
                                        <a href="{{ path('mage_user_detail', {'id': user.id}) }}" class="btn btn-success btn-sm" title="View details">
                                            <i class="material-icons">visibility</i>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header card-header-primary">
                    <span class="float-right">
                        <a class="btn btn-info btn-sm" href="{{ path('mage_user_group_new') }}">
                            Add group
                        </a>
                    </span>
                    <h4 class="card-title ">Groups</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead class=" text-primary">
                            <tr>
                                <th>Name</th>
                                <th width="100"></th>
                            </tr>
                            </thead>

                            <tbody>
                            {% for group in groups %}
                                <tr>
                                    <td>{{ group.name }}</td>
                                    <td>
                                        <a href="{{ path('mage_user_group_detail', {'id': group.id}) }}" class="btn btn-success btn-sm" title="View details">
                                            <i class="material-icons">visibility</i>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}